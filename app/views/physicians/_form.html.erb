<%= form_with(model: physician, local: true) do |form| %>
  <% if physician.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(physician.errors.count, "error") %> prohibited this physician from being saved:</h2>

      <ul>
        <% physician.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :specialty %>
    <%= form.text_field :specialty %>
  </div>

  <h3>Tasks</h3>

  <div id='tasks'>
    <%= form.fields_for :tasks do |task| %>
      <%= render 'forms_fields', :f => task %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'Add Task', form, :tasks %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
